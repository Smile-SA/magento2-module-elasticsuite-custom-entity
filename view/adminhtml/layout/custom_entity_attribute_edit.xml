<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="admin-2columns-left">
    
    <body>
        <referenceContainer name="left">
            <block class="Smile\ElasticsuiteCustomEntity\Block\Adminhtml\Attribute\Edit\Tabs" name="attribute_edit_tabs">
                <container label="Main" name="main">
                    <block class="Smile\ElasticsuiteCustomEntity\Block\Adminhtml\Attribute\Edit\Tab\Main" as="base" />
                    <block class="Magento\Eav\Block\Adminhtml\Attribute\Edit\Options\Options" as="options" />
                </container>
                <block class="Magento\Eav\Block\Adminhtml\Attribute\Edit\Options\Labels" as="labels" />
                <block class="Smile\ElasticsuiteCustomEntity\Block\Adminhtml\Attribute\Edit\Tab\Front" as="front" />
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Smile\ScopedEav\Block\Adminhtml\Attribute\Edit" name="attribute_edit_content" />
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" name="attribute_edit_js" template="Smile_ElasticsuiteCustomEntity::attribute/js.phtml" />
        </referenceContainer>
    </body>

</page>
