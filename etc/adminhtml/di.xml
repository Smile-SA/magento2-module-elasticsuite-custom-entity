<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="Smile\ElasticsuiteCustomEntity\Ui\Component\Entity\Edit\Button\Save" type="Smile\ScopedEav\Ui\Component\Entity\Edit\Button\Save">
