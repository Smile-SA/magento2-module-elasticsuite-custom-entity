<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Smile\ElasticsuiteCustomEntity\Model\Locator\LocatorInterface" type="Smile\ElasticsuiteCustomEntity\Model\Locator\RegistryLocator" />

    <virtualType
        name="Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\Pool"
        type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="eav" xsi:type="array">
                    <item name="class" xsi:type="string">Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\Eav</item>
                    <item name="sortOrder" xsi:type="number">10</item>
