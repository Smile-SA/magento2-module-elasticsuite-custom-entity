                <item name="attribute_set_id" xsi:type="array">
                    <item name="class" xsi:type="string">Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\AttributeSet</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
                <item name="system" xsi:type="array">
                    <item name="class" xsi:type="string">Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\System</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\CustomEntityDataProvider">
        <arguments>
            <argument name="pool" xsi:type="object">Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\Pool</argument>
        </arguments>
    </type>

</config>
