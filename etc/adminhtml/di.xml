            <argument name="formName" xsi:type="string">custom_entity_entity_form.custom_entity_entity_form</argument>
        </arguments>
    </virtualType>

    <virtualType name="Smile\ElasticsuiteCustomEntity\Ui\DataProvider\CustomEntity\Form\Modifier\Pool" type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
